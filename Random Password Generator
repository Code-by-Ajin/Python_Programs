import random
import string

def generate_password(length=12, include_uppercase=True, include_numbers=True, include_symbols=True):
  
    characters = string.ascii_lowercase
    
    if include_uppercase:
        characters += string.ascii_uppercase
    if include_numbers:
        characters += string.digits
    if include_symbols:
        characters += string.punctuation
        
    if not characters:
        return "Error: No character types selected."

    password = ''.join(random.choice(characters) for i in range(length))
    return password

if __name__ == "__main__":
    print("--- Secure Password Generator ---")
    
    try:
        length = int(input("Enter desired password length (e.g., 16): ") or 16)
        
        upper = input("Include uppercase letters? (y/n, default y): ").lower() in ('y', '')
        nums = input("Include numbers? (y/n, default y): ").lower() in ('y', '')
        syms = input("Include special symbols? (y/n, default y): ").lower() in ('y', '')
        
        new_password = generate_password(
            length=length, 
            include_uppercase=upper, 
            include_numbers=nums, 
            include_symbols=syms
        )
        
        print(f"\nYour new generated password: {new_password}")

    except ValueError:
        print("\nError: Please enter a valid number for length.")
